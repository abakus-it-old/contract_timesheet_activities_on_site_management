<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>      
       <record model="ir.ui.view" id="view_account_analytic_account_on_site_product">
            <field name="name">sale_subscription_on_site_product</field>
            <field name="model">sale.subscription</field>
            <field name="inherit_id" ref="account_analytic_account_improvements.sale_subscription_contract_improvements"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='contract_settings']" position="after">
                    <group string="On Site Settings" id="on_site_settings">
                        <field name ="on_site_product"/>
                        <field name ="on_site_invoice_by_km"/>
                        <field name ="on_site_distance_in_km"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
